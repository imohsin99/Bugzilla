<div class="container">
  <h1 class="d-flex justify-content-center shadow-sm mt-4 p-4">Projects</h1>
  <div class="text-end my-3 ">
    <%= link_to "Add Project", new_project_path, class: "btn btn-success btn-sm px-4" if current_user.manager? %>
  </div>
  <div id="project_cards">
    <%= render @projects %>
  </div>
  <div class="d-flex justify-content-center mx-3">
  <%= paginate @projects%>
  </div>
  <%= link_to "Back", root_path, class: "btn btn-primary mt-3 btn-sm px-4" %>
</div>
