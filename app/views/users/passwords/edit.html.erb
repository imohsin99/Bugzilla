<h2 class="text-center mb-2 form-label">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field mx-2">
    <%= f.label :password, "New password", class: "form-label"  %><br />
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", required: true, class: "form-control" %>
    <div id="passwordHelpBlock" class="form-text">
      Your password must be atleast 6 characters long.
    </div>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password", class: "btn btn-primary w-25"  %>
  </div>
<% end %>

<%= render "users/shared/links" %>
